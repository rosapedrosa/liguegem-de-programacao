int fatorial(int a)
{
    if(a == 1 || a == 0)
        return 1;
    return a * fatorial(a-1);
}
int intervalo(int a, int b)
{
    if(a == b)
        return b;

    return a + intervalo(a + 1, b                                          );
}
int digito(int a, int cont)
{
    if(a == 0)
        return 0;
    return cont + digito(a/10, cont++);
}
int binario(int a)
{
    if(a == 0)
        return 0;
    return a%2 + 10*binario(a/2);

}

int inverte (int n)
{
    if(n==0)
        return 1;
        
    return n%10 * i  inverte(n/10);

}


bool primo (int a, int n)
{

    if(a==1)
        return true;

    if(n%a==0)
        return false;

    primo(a-1, n);




}
int mdc(int n, int m, int aux) {
    if (aux <= 1) {
        if (n < m)
            aux = n;
        else
            aux = m;
    }
    if (n % aux == 0 && m % aux == 0)
        return aux;
    return mdc(n, m, aux - 1);
}

int mmc(int n, int m, int aux) {
    int md;
    md = mdc(n, m, aux);
    return (n * m) / md;
}
